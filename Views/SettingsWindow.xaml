<Window x:Class="Keddy_Rest_Reminder.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Keddy_Rest_Reminder"
        mc:Ignorable="d"
        Title="Ayarlar" Height="450" Width="400" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- Butonlar için Genel Stil Tanımlaması (Varsayılan) -->
        <Style x:Key="CustomButtonStyle" TargetType="Button">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Background" Value="#00DDDDDD"/>
            <Setter Property="Foreground" Value="#FFE9E9E9"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#33D4D4D4"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- CloseBtn için özel Hover Efekti Tanımlaması -->
        <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource CustomButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Red"/>
                    <!-- Kırmızı hover rengi -->
                    <Setter Property="Foreground" Value="White"/>
                    <!-- Yazı rengi beyaz -->
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Canvas Background="#FF0E0E0E" Margin="0,0,10,0" Width="400">
        <Canvas x:Name="Toolbar" Width="400" Height="30" Background="#FF161616" VerticalAlignment="Top" MouseLeftButtonDown="Toolbar_MouseLeftButtonDown">
            <!-- CloseBtn için özel stil uygula -->
            <Button x:Name="CloseBtn" Content="TAMAM" Canvas.Left="345" Width="55" Height="30" Style="{StaticResource CloseButtonStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" Click="CloseBtn_Click"/>
            <Label x:Name="WindowTitle" Content="Title" Canvas.Top="2" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="#FFE9E9E9" Canvas.Left="31"/>
            <Image Height="25" Canvas.Left="3" Width="25" Canvas.Top="3" Source="/images/cat.png"/>
            <Button x:Name="ResetBtn" Content="SIFIRLA" Canvas.Left="290" Width="55" Height="30" Style="{StaticResource CloseButtonStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" Click="ResetBtn_Click"/>
        </Canvas>
        <Grid Height="420" Width="400" HorizontalAlignment="Center" Canvas.Top="30" VerticalAlignment="Top">
            <Label Content="version 2025.4.7" HorizontalAlignment="Center" Margin="0,394,0,0" VerticalAlignment="Top" Foreground="#FFE9E9E9"/>
            <ComboBox x:Name="DurationComboBox" FontSize="14" SelectedIndex="0" Margin="114,10,236,385"/>
            <Label Content="Varsayılan Süre" HorizontalAlignment="Left" Margin="6,6,0,0" VerticalAlignment="Top" Foreground="#FFE9E9E9" FontSize="14"/>
        </Grid>
    </Canvas>
</Window>
